<div class="gridleavesTable" id="gridleavesTable">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Image Links</th>
        <th>Personal Assets</th>
        <th>Professional Interests</th>
        <th>Hobbies</th>
        <th>Projects</th>
        <th>Contact Information</th>
        <th>Express</th>
        <th>Age</th>
        <th>Pronouns</th>
        <th>Community Assets</th>
        <th>Delete</th>
      </tr>
    </thead>
    {{#each profiles as |profile|}}
    <tbody>
      <tr>
        <td>{{profile.name}}</td>
        <td>{{profile.location}}</td>
        <td>{{profile.image_link}}</td>
        <td>{{profile.personal_assets}}</td>
        <td>{{profile.professional_interests}}</td>
        <td>{{profile.hobbies}}</td>
        <td>{{profile.projects}}</td>
        <td>{{profile.contact_info}}</td>
        <td>{{profile.express}}</td>
        <td>{{profile.age}}</td>
        <td>{{profile.pronouns}}</td>
        <td>{{profile.community_assets}}</td>
        {{#if profile.editable}}
        <td><button class="delete-profile btn btn-danger" data-id="{{profile.id}}">Delete </button></td>
        {{/if}}
      </tr>
    </tbody>
    {{/each}}
  </table>

  <div>
    <button id='new-profile' class="btn btn-lg btn-primary">Add New Profile</button>
  </div>
</div>
{{#each profiles as |profile|}}

{{#if profile.editable}}
<form class="update-profile-form">
      <h2>Update</h2>
      <div class='update-profile' data-id="{{profile.id}}" value="{{profile.id}}">  </div>
      <input name='profile[id]' class='input_class' data-id="{{profile.id}}" value="{{profile.id}}" type="text" placeholder="text">
      Name: <input name='profile[name]' value="{{profile.name}}" type="text" placeholder="name">
      Location: <input name='profile[location]' value="{{profile.location}}" type="text" placeholder="text">
      Image_Link: <input name="profile[image_link]" value="{{profile.image_link}}" type="text" placeholder="text">
      Personal_Assets: <input name="profile[personal_assets]" value="{{profile.personal_assets}}"  type="text" placeholder="text">
      Professional_Interests: <input name="profile[professional_interests]" value="{{profile.professional_interests}}"  type="text" placeholder="text">
      Hobbies: <input name='profile[hobbies]' value="{{profile.hobbies}}" type="text" placeholder="text">
      Projects: <input name="profile[projects]" value="{{profile.projects}}" type="text" placeholder="text">
      Contact_Info: <input name="profile[contact_info]" value="{{profile.contact_info}}"  type="text" placeholder="text">
      Express: <input name='profile[express]' value="{{profile.express}}" type="text" placeholder="text">
      Age: <input name='profile[age]' value="{{profile.age}}" type="text" placeholder="text">
      Pronouns: <input name="profile[pronouns]" value="{{profile.pronouns}}" type="text" placeholder="text">
      Community_Assets: <input name="profile[community_assets]" value="{{profile.community_assets}}"  type="text" placeholder="text">
      <input type="submit" value="Update Profile">
  </form>
  {{/if}}
  {{/each}}

  </div>
